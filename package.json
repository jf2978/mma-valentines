{
  "name": "mma-valentines",
  "version": "1.0.0",
  "description": "For my best food friend - Michelle",
  "main": "main.js",
  "repository": {
    "url": "https://github.com/jf2978/mma-valentines"
  },
  "dependencies": {
    "rcedit": "^0.9.0",
    "wine": "^0.9.8"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.electron.mma",
    "productName": "Valentine's Day 2018",
    "copyright": "Copyright Â© year Jeff",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS"
    }
  },
  "author": {
  "name":"Jeff",
  "email": "jf2978@columbia.edu"
  },
  "license": "ISC"
}
